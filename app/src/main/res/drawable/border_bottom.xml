<!-- border_bottom.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Adjust background color -->
            <stroke
                android:width="1dp"
                android:color="#000000" /> <!-- Adjust border color and width -->
        </shape>
    </item>
    <item android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Adjust background color -->
            <stroke
                android:width="1dp"
                android:color="#000000" /> <!-- Adjust border color and width -->
        </shape>
    </item>
</layer-list>
